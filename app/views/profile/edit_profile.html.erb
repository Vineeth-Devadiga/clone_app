
    <h2>Edit Profile</h2>

<% if @user.image.attached? %>
  <%= image_tag @user.image, width: 100 %>
  <% else %>
  <%= image_tag "/assets/backImg.jpg",width:100 %>
  <% end %>
<%= form_with url: "/profile/edit_profile", method: :post do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

 
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name,:value=>@user.first_name %>
  </div>
<div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name,:value=>@user.last_name %>
  </div>
 
  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.number_field :mobile,:value=>@user.mobile %>
  </div>

  <div class="field">
    <%= f.label :date_of_birth %><br />
    <%= f.date_field :date_of_birth,:value=>@user.date_of_birth %>
  </div>

  <div class="field">
    <%= f.file_field :image %>
  </div>

 
  <div class="actions">
    <%= f.submit "Edit Profile"%>
  </div>
<% end %>
